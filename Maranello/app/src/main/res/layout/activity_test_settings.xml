<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="o.maranello.TestSettings">
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/broadbandSupplier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testsettings.broadbandSupplier"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/planName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testsettings.planName"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/costPerMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testsettings.costPerMonth"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="numberDecimal" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/downloadSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testsettings.downloadSpeed"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number|text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:id="@+id/uploadSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testsettings.uploadSpeed"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number|text" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/testsettings.enter"
        android:id="@+id/button"
        android:layout_marginTop="98dp"
        android:onClick="submit"
        android:textStyle="bold"/>

</LinearLayout>
